<div class="col-md-12">
<h2>Sign Up</h2>
  <%= form_for(@user) do |f| %>
    <%= label_tag :username %><br>
    <%= f.text_field :username, class: 'small-placeholder' %><br><br>
    <%= label_tag :password %><br>
    <%= f.password_field :password, class: 'small-placeholder' %><br><br>
    <%= label_tag :password_confirmation %><br>
    <%= f.password_field :password_confirmation, class: 'small-placeholder'%><br>
    <%= f.submit "Sign Up", class: 'btn btn-secondary btn-hover', style: 'margin-top: 25px;' %>
<% end %>
</div>
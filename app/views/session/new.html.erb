<div class="col-md-12">
  <h2>Log in</h2>

  <%= form_tag('/login') do %>
  <%= label_tag :username %><br>
  <%= text_field_tag :username, nil, class: 'small-placeholder' %><br><br>
  <%= label_tag :password %><br>
  <%= password_field_tag :password, nil, class: 'small-placeholder' %><br>
  <%= submit_tag "Log in", class: 'btn btn-secondary btn-hover', style: 'margin-top: 25px;' %>
  <% end %>
</div>